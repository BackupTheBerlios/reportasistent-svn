<?xml version="1.0" encoding="windows-1250"?>
<visualization>

  <visualization_options active_element="SD-CF hypothesis" visualization_label="Graph - Set Differences">

    <!-- setting the graph title -->
    <string_option variable_name="GraphTitle" title="Graph title - (editable)" />    

    <!--setting of graph type-->
    <enum_option variable_name="GraphType" title="Graph type">  
       <enum_item  value="xlColumnStacked" label="Column"/>
       <enum_item  value="xl3DColumnStacked" label="3D Column"/>
       <enum_item  value="xlPie" label="Pie"/>
       <enum_item  value="xl3DPie" label="3D Pie"/>
       <enum_item  value="xlBarClustered" label="Bar"/>
       <enum_item  value="xlLine" label="Line"/>
    </enum_option>

    <!--setting of differences type-->
    <enum_option variable_name="DifType" title="Type of differences">  
       <enum_item  value="dif_abs" label="Absolute values differences"/>
       <enum_item  value="dif_rel" label="Relative values differences"/>
    </enum_option>

    <!--setting of values type-->
    <enum_option variable_name="ValuesType" title="Type of values">  
       <enum_item  value="abs" label="Absolute"/>
       <enum_item  value="rel_sum" label="Relative (to sum)"/>
       <enum_item  value="rel_max" label="Relative (to max)"/>
    </enum_option>

    <!--setting whether to show a graph legend-->
    <enum_option variable_name="LegendShow" title="Show graph legend">
       <enum_item value="true" label="yes"/>  
       <enum_item value="false" label="no"/>  
    </enum_option>


    <!--setting of chart colors-->
    <color_option variable_name="ChartColor" title="Chart color - (#RRGGBB)" />  


    <!-- setting of graph width (compared to page width)-->
    <number_option variable_name="GraphWidth" title="Graph width (to page width) - (editable)" num_type="float" dec="2" min_value="0" max_value="1"/>

    <!-- setting of graph height (compared to page width)-->
    <number_option variable_name="GraphHeight" title="Graph height (to page width) - (editable)" num_type="float" dec="2" min_value="0" max_value="5"/>
    
    
  </visualization_options>

  
  
  <!--default values of variables-->
  
  <visualization_values>
      <variable name="GraphType" value="xlColumnStacked" />
      <variable name="ValuesType" value="abs" />
      <variable name="DifType" value="dif_abs" />
      <variable name="GraphTitle" value="SD-CF Graph" />
      <variable name="LegendShow" value="true"/>
      <variable name="GraphWidth" value="75e-2"/>
      <variable name="GraphHeight" value="75e-2"/>
      <variable name="ChartColor" value=""/>
  </visualization_values>

</visualization>